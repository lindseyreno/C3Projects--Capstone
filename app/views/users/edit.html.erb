<%= form_for(@user) do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
  </fieldset>

  <%= f.submit "Save changes" %>
<% end %>
